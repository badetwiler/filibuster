<?xml version="1.0" encoding="UTF-8"?>
<beans:beans     xmlns="http://www.springframework.org/schema/security"
                 xmlns:beans="http://www.springframework.org/schema/beans"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">


    <http access-denied-page="/login?authorization_error=true">
        <intercept-url pattern="/chat/**" access="ROLE_USER" />
        <intercept-url pattern="/home" access="ROLE_USER" />
        <form-login login-page="/login" />
        <logout logout-url="/logout" />
        <logout logout-success-url="/index"/>

    </http>

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="filibusterUserDetailsService">
          <password-encoder ref="passwordEncoder"/>
        </authentication-provider>
    </authentication-manager>

    <!--<beans:bean name="tokenRepository" class="org.springframework.security.web.authentication.rememberme.InMemoryTokenRepositoryImpl"/>-->

    <!--<beans:bean name="rememberMeServices"-->
